<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">

	<head th:include="base/header :: head_template">
		<link th:href="@{/css/plugins/iCheck/custom.css}" rel="stylesheet" />
	</head>

	<body class="gray-bg">
		<input type="hidden" id="contextPath" value="${pageContext.request.contextPath}" />
		<div class="wrapper wrapper-content animated fadeInRight">
			<div class="row">
				<div class="col-sm-12">
					<div class="ibox">
						<div class="ibox-title">
							<h5>短信模板管理</h5>
						</div>
						<div class="ibox-content">
							<form class="form-inline" id="search_id">
								<div class="p-xxs">
		                            <div class="form-group">
										<label class="control-label">模板ID：</label>
		                               	<input type="text"  id="tempId" name="tempId"  class="form-control" />
		                            </div>
		                            <div class="form-group">
										<label class="control-label">模板内容：</label>
		                               	<input type="text"  id="temp" name="temp"  class="form-control" />
		                            </div>
		                            <div class="form-group">
										<label class="control-label">模板类型：</label>
		                               	<select id="type" name="type" class="form-control">
		                               		<option value="">全部</option>
		                               		<option value="1">登记注册</option>
		                               		<option value="2">修改密码</option>
		                               		<option value="3">运营</option>
		                               		<option value="4">订单</option>
		                               		<option value="5">其他</option>
		                               	</select>
		                            </div>
		                            <button id="page_sumbit" type="button" class="btn btn-info">查询</button>
									<button id="add" type="button" class="btn btn-info" >新增</button>
									<input type="reset" class="btn btn-primary" value="重置"/>
								</div>
							</form>
							<p></p>
							<table id="dataTable" class="table table-striped table-bordered table-hover dataTables-example">
								<thead>
									<tr>
										<th>模板ID</th>
										<th>模板</th>
										<th>模板类型</th>
										<th>创建时间</th>
										<th>操作</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script th:src="@{/js/plugins/iCheck/icheck.min.js}"></script>
		<script src="/js/plugins/layer/laydate/laydate.js"></script>

<script>

	$('#add').on('click', function(){
		edit("/sms/addTemp");
	});

	function edit(icontent){
		layer.open({
	      title :'模板编辑',
	      type: 2,
	      shadeClose: false, //点击遮罩关闭
	      area: ['700px', '400px'],
	      offset: ['200px', '300px'],
	      content: icontent,
	      btn: ['保存', '取消'],
			  btn1: function(index, layero){
	              var iframeWin = window[layero.find('iframe')[0]['name']];
	              iframeWin.submit();
	              layer.close(index);
	              parent.location.reload();
			  },
			  btn2: function(index, layero){
			    	return true;
			  }
	      
	    });
	}

	
	$(document).ready(function() {
		
		$('#dataTable').ystable({
			"ajax": ys.path + "/sms/qryTempList",
			"columns": [
				{"data": "tempId"}, 
				{"data": "temp",}, 
				{"data": "type",
					"render": function(data, type, row, meta) {
						if(data == 1) {
							return data+"-登录注册"
						} else if(data == 2) {
							return data+"-修改密码"
						} else if(data == 3) {
							return data+"-运营"
						} else if(data == 4) {
							return data+"-订单"
						} else if(data == 5) {
							return data+"-其他"
						}
					}
				}, 
				{"data": "creatTime"},
				],
				searchOpts : {
		         	   searchBtn : "page_sumbit",
		         	   searchForm : "search_id",
		        },
		        "dom": 'lrtip',
		        searching: true,
		        tableOpts : [{
            	  	optName : "修改",
            	  	render : function(row){
            	  		return "修改";
            	  	},
            		optFun : function(row){
                        edit("/sms/modifyTemp/" + row.tempId);
            		}
            	},{
                	optName : "删除",
                    render : function(row){
	                    return "删除";
                	},
                	optFun : function(row){
	                	BootstrapDialog.confirm("确认删除该模板["+row.tempId+"]?", function(result){
	        	            if(result) {
	        	            	$.ajax({
	        	    	        	url: "/sms/delTemplate/"+row.tempId,
	        	    	        	success: function(d){
	        	    	        		parent.location.reload();
	        	    	        	}
	        	            	});
	        	            }
	        	        })
               	 	}
            	}]
		        /* serverSide: true */
		});

	});
	
</script>
	</body>

</html>