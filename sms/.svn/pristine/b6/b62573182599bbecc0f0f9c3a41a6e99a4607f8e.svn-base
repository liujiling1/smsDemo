<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:th="http://www.thymeleaf.org">
<head th:include="base/header :: head_template">
</head>

<body >
        <div class="row">
            <div class="col-sm-12">
                    <div class="ibox-content " >
                        <form class="form-horizontal " action=""  id="signupForm" >
	                    	<input type="text"  id="todo" name="todo" hidden="true" required th:value="${todo}"/>
	                    	<input type="text"  id="id" name="id" hidden="true" required th:value="${id}"/>
                            <div class="form-group " >
                                <label class="col-sm-2 control-label" >角色ID：</label>
                                <div class="col-sm-8 " >
                                	<input type="text"  class="form-control " id="roleId" name="roleId" th:value="${roleInfo.roleId}"/>
                                </div>
                            </div>
                            <div class="form-group " >
                                <label class="col-sm-2 control-label" > 角色说明：</label>
                                <div class="col-sm-8 " >
                                	<input type="text"  class="form-control" id="des" name="des" th:value="${roleInfo.des}"/>
                                </div>
                            </div>
                            <div class="form-group "  >
                                <label class="col-sm-2 control-label" > 菜单类型 ：</label>
                                <div class="col-sm-8 " >
                                	<input type="text"  class="form-control" id="menuTypes" name="menuTypes" th:value="${roleInfo.menuTypes}"/>
                                	<span class="help-block m-b-none"><i class="fa fa-info-circle"></i>多个请以英文,分隔</span>
                                </div>
                            </div>
                            <br>
                        </form>
                    </div>
            </div>
		</div>
    <!-- Page-Level Scripts -->
    <script src="/js/plugins/webuploader/webuploader.js"></script>
    <script src="/js/plugins/webuploader/webuploader.ys.js"></script>
    <script>
    
   	 	//检查
     	var icon = "<i class='fa fa-times-circle'></i> ";
        $("#signupForm").validate({
            rules: {
            	roleId: {
                    required: true,
                },
                des: {
                    required: true,
                },
                menuTypes: {
                    required: true,
                },
            },
            messages: {
            	roleId: {
                    required: icon + "请输入角色ID",
                }
            }
        });
    	
        $(document).ready(function () {
        	
        });
        
        function submit() {
        	/* 校验 */
        	var res = $("#signupForm").valid();
        	if(!res){
        		return false;
        	}
        	
        	$.ajax({
	        	url: "/role/saveRoleInfo",
	        	type: 'POST',
	        	async: false,
	        	data:$("#signupForm").serialize(),
	        	success: function(d){
	        		
	        	}
        	});  	
        	
        	return true;
        }
        
    </script>

</body>

</html>
