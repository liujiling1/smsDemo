<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:th="http://www.thymeleaf.org">
<head th:include="base/header :: head_template">
    <link th:href="@{/css/plugins/iCheck/custom.css}" rel="stylesheet" />
</head>
<body class="gray-bg">
   <input type="hidden" id="contextPath" value="${pageContext.request.contextPath}" />
   <div class="wrapper wrapper-content animated fadeInRight">
       <div class="row">
           <div class="col-sm-12">
               <div class="ibox"><div class="ibox-title">
                   <h5>角色列表</h5>
               </div>
                   <div class="ibox-content">
                       <form id="searchForm" class="form-inline">
                       		<div class="p-xxs">
	                       		<div class="form-group">
	                       			<label >角色ID：</label>
	                          		<input type="text" name="roleId"  class="form-control" />
                                </div>
	                           	<div class="form-group">
	                           		<label >角色说明：</label>
	                          		<input type="text" name="des"  class="form-control" />
	                           	</div>
	                           	<div class="form-group">
	                           		<label >菜单类型：</label>
	                          		<input type="text" name="menuTypes"  class="form-control" />
	                           	</div>
	                           <button id="searchBtn" type="button" class="btn btn-info">查询</button>
	                           <button type="button" id="addUserBtn" class="btn btn-info" onclick="edit('新增角色','/role/modifyRole/0/0')">新增角色</button>
	                           <input type="reset" class="btn btn-primary" value="重置"/>
                           </div>
                       </form>
                       <p></p>
                       <table id="dataTable" class="table table-striped table-bordered table-hover dataTables-example">
                           <thead>
                               <tr>
                                   <th>ID</th>
                                   <th>角色ID</th>
                                   <th>角色说明</th>
                                   <th>菜单类型</th>
                                   <th>创建时间</th>
                                   <th>操作</th>
                               </tr>
                           </thead>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </div>

   <script th:src="@{/js/plugins/iCheck/icheck.min.js}"></script>
   <!-- Page-Level Scripts -->
   <script>
   
   function edit(tt,url,todo){
	   var height = "500px";
	   
		layer.open({
	      title :tt,
	      type: 2,
	      shadeClose: false, //点击遮罩关闭
	      area: ['700px', height],
	      offset: ['120px', '300px'],
	      content: url,
	      btn: ['保存', '取消'],
			  btn1: function(index, layero){
	              var iframeWin = window[layero.find('iframe')[0]['name']];
	              if(!iframeWin.submit()){
	            	  wrong;
	            	  return;
	              }
	              
	              parent.location.reload();
			  },
			  btn2: function(index, layero){
			    	return true;
			  }
	    });
	}

   $(document).ready(function () {
          	$('#dataTable').ystable( {
               "ajax": ys.path+"/role/qryRoleList",
               "columns": [
                   { "data": "id" },
                   { "data": "roleId" },
                   { "data": "des" },
                   { "data": "menuTypes" },
                   { "data": "updateTime", "render":function(data, type, row, meta){
                       return moment(data).format("YYYY-MM-DD")||"-"
                   } },
               ],
               searchOpts : {
            	   searchBtn : "searchBtn",
            	   searchForm : "searchForm"
               },
               "dom": 'lrtip',
               searching: true,	
               tableOpts : [
            	   {
	               	  	optName : "",
	               	 	render:function(row){
	                       return false;
	                   	}
	               	},{
	            	  	optName : "修改角色",
	            		optFun : function(row){
	            			edit("修改角色","/role/modifyRole/" + row.id+"/2", 2);
	            		}
	            	}/* ,{
            		divider:  true, 
            		optName : "权限管理",
            		optFun : function(row){
                        authManage(row);
            		}
            	} ,{
                   optName : "启用",
                   render:function(row){
                       if(row.enable == 1)return false;
                       return "启用";
                   },
                   optFun : function(row){
                       enable(row);
                   }
               },{
                   optName : "禁用",
                   render:function(row){
                       if(row.enable == 0)return false;
                       return "禁用";
                   },
                   optFun : function(row){
                       disable(row);
                   }
               }*/]
           	});

            function enable(row){
                $.ajax({
                    "type":"post",
                    "url":ys.path+"/users/"+row.id+"/enable",
                    "success":function(ret){
                        window.location.reload();
                    }
                });
            }

            function disable(row){
                $.ajax({
                    "type":"post",
                    "url":ys.path+"/users/"+row.id+"/disable",
                    "success":function(ret){
                        window.location.reload();
                    }
                });
            }
          	
          	/* $("#addUserBtn").on("click", function(){
                window.location.href = ys.path+"/users/new"
           	}); */
       });

   </script>
</body>
</html>
